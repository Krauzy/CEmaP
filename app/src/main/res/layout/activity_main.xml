<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="br.fipp.BuscaCep.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha o Estado"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spiEst"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:dropDownHeight="200dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtCid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Digita a Cidade"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtLag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Digita a Rua"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btcep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#45B509"
        android:text="Buscar"
        android:textColor="#FFFFFF" />

</LinearLayout>